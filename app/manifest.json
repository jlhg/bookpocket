{
  "manifest_version": 2,
  "name": "BookPocket",
  "short_name": "BookPocket",
  "description": "Bookmark your web pages to Pocket",
  "version": "1.0",
  "author": "Jian-Long Huang",
  "minimum_chrome_version": "38",
  "icons": {
    "128": "assets/images/icon_128.png"
  },
  "background": {
    "scripts": [
      "assets/javascripts/background.bundle.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "assets/images/icon_grey_19.png",
      "38": "assets/images/icon_grey_38.png"
    },
    "default_title": "BookPocket",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "https://getpocket.com/"
  ],
  "web_accessible_resources": ["oauth.html"]
}
